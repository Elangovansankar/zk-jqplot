<?xml version="1.0" encoding="UTF-8"?>

<language-addon>
	<addon-name>jqplot</addon-name> <!-- required -->

 	<version>
		<version-class>org.zkoss.component.Version</version-class>
		<version-uid>0.8.0</version-uid>
		<zk-version>5.0.10</zk-version><!-- or later -->
	</version>

	<language-name>xul/html</language-name>
	<component>
		<component-name>jqplot</component-name> <!-- required -->
		<component-class>org.zkoss.component.Jqplot</component-class> <!-- required -->
		<widget-class>component.Jqplot</widget-class> <!-- required -->
		<mold>
			<mold-name>default</mold-name>
			<mold-uri>mold/jqplot.js</mold-uri>
			<css-uri>css/jqplot.css.dsp</css-uri>
		</mold>
	</component>
	
	<!-- Include jqplot library -->
	<javascript package="component" merge="true"/>
	<stylesheet href="~./js/component/ext/jquery.jqplot.css" type="text/css"/>	
</language-addon>
